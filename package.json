{
  "name": "repomix-extension",
  "displayName": "Repomix Controller",
  "description": "VSCode拡張機能でRepomix CLIをGUIから直感的に操作",
  "version": "0.0.1",
  "publisher": "daisuke",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repomix-controller",
          "title": "Repomix",
          "icon": "resources/repomix-icon.svg"
        }
      ]
    },
    "views": {
      "repomix-controller": [
        {
          "id": "repomixFileExplorer",
          "name": "File Tree"
        }
      ]
    },
    "commands": [
      {
        "command": "repomix-extension.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.saveProfile",
        "title": "Save Profile",
        "icon": "$(add)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.manageProfiles",
        "title": "Manage Profiles",
        "icon": "$(bookmark)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.loadProfile",
        "title": "Load Profile",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.deleteProfile",
        "title": "Delete Profile",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.executeRepomix",
        "title": "Execute Repomix",
        "icon": "$(play)",
        "category": "Repomix"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "repomix-extension.executeRepomix",
          "when": "view == repomixFileExplorer",
          "group": "navigation@1"
        },
        {
          "command": "repomix-extension.saveProfile",
          "when": "view == repomixFileExplorer",
          "group": "navigation@2"
        },
        {
          "command": "repomix-extension.manageProfiles",
          "when": "view == repomixFileExplorer",
          "group": "navigation@3"
        },
        {
          "command": "repomix-extension.refresh",
          "when": "view == repomixFileExplorer",
          "group": "navigation@4"
        }
      ],
      "view/item/context": []
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "mocha out/test/**/*.test.js --recursive --ui tdd --require ./test-setup.js",
    "test:mocha": "mocha --config ./mocha.json",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint src --ext ts,tsx --fix"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sinon": "^10.0.15",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "chai": "^4.3.7",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "sinon": "^15.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
