{
  "name": "repomix-extension",
  "displayName": "Repomix Controller",
  "description": "VSCode extension to intuitively operate Repomix CLI from GUI / VSCode拡張機能でRepomix CLIをGUIから直感的に操作",
  "version": "0.0.2",
  "publisher": "daisuke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bamps53/repomix-extension.git"
  },
  "homepage": "https://github.com/bamps53/repomix-extension#readme",
  "bugs": {
    "url": "https://github.com/bamps53/repomix-extension/issues"
  },
  "keywords": [
    "repomix",
    "code-generation",
    "file-tree",
    "repository",
    "cli-tool",
    "developer-tools",
    "productivity",
    "profile-management"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Developer Tools",
    "Productivity"
  ],
  "activationEvents": [
    "onView:repomixFileExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repomix-controller",
          "title": "Repomix",
          "icon": "resources/repomix-icon.svg"
        }
      ]
    },
    "views": {
      "repomix-controller": [
        {
          "id": "repomixSearchWebview",
          "type": "webview",
          "name": "Search",
          "visibility": "visible"
        },
        {
          "id": "repomixFileExplorer",
          "name": "File Tree",
          "visibility": "visible"
        },
        {
          "id": "repomixProfiles",
          "name": "Profiles",
          "visibility": "collapsed"
        }
      ]
    },
    "keybindings": [],
    "commands": [
      {
        "command": "repomix-extension.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.selectAll",
        "title": "Select All",
        "icon": "$(check-all)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.saveProfile",
        "title": "Save Profile",
        "icon": "$(add)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.loadProfile",
        "title": "Load Profile",
        "icon": "$(folder-opened)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.deleteProfile",
        "title": "Delete Profile",
        "icon": "$(trash)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.renameProfile",
        "title": "Rename Profile",
        "icon": "$(edit)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.executeRepomix",
        "title": "Execute Repomix",
        "icon": "$(play)",
        "category": "Repomix"
      },
      {
        "command": "repomix-extension.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)",
        "category": "Repomix"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "repomix-extension.executeRepomix",
          "when": "view == repomixFileExplorer",
          "group": "navigation@1"
        },
        {
          "command": "repomix-extension.saveProfile",
          "when": "view == repomixFileExplorer",
          "group": "navigation@2"
        },
        {
          "command": "repomix-extension.selectAll",
          "when": "view == repomixFileExplorer",
          "group": "navigation@3"
        },
        {
          "command": "repomix-extension.refresh",
          "when": "view == repomixFileExplorer",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "repomix-extension.loadProfile",
          "when": "view == repomixProfiles && viewItem == profile",
          "group": "inline@1"
        },
        {
          "command": "repomix-extension.renameProfile",
          "when": "view == repomixProfiles && viewItem == profile",
          "group": "inline@2"
        },
        {
          "command": "repomix-extension.deleteProfile",
          "when": "view == repomixProfiles && viewItem == profile",
          "group": "inline@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "mocha out/test/**/*.test.js --recursive --ui tdd --require ./test-setup.js",
    "test:coverage": "c8 npm run test:unit",
    "test:coverage:html": "c8 --reporter=html npm run test:unit",
    "test:coverage:lcov": "c8 --reporter=lcov npm run test:unit",
    "test:coverage:nyc": "nyc npm run test:unit",
    "test:mocha": "mocha --config ./mocha.json",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint src --ext ts,tsx --fix"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sinon": "^10.0.15",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "chai": "^4.3.7",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "nyc": "^17.1.0",
    "prettier": "^2.8.8",
    "sinon": "^15.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
